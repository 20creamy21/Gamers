<div class="container mt-5 mb-5">

  <h2 class="row">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <!--<p class="notice"><%= notice %></p>-->
    <p class="alert row text-danger"><%= alert %></p>

    <div class="field row mt-5 text-center box15">
      <div class="col"><%= f.label :メールアドレス %></div>
      <div class="col"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="field row mt-3 text-center box15">
      <div class="col"><%= f.label :パスワード %></div>
      <div class="col"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>

    <div class="actions col text-center mt-5">
      <%= f.submit "ログイン", class:"btn btn-success" %>
    </div>
  <% end %>

  <div class="row mt-5">
    サインアップは<%= link_to "こちら", new_user_registration_path %>です。
  </div>

</div>