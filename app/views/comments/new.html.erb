<h2>コメント</h2>

<% if @comment.errors.any? %>
  <div><%= @comment.errors.count %>件のエラーが発生しました</div>
  <% @comment.errors.full_messages.each do |message| %>
  <div><%= message %></div>
  <% end %>
<% end %>

<%= form_with model: @comment, url: comments_path(post_id: @comment.post_id), local:true do |f| %>
  <div><%= f.text_field :comment %></div>
  <div><%= f.submit "投稿する" %></div>
<% end %>