<h2>コメント</h2>

<div class="col mt-4">
  <% if @comment.errors.any? %>
    <% @comment.errors.full_messages.each do |message| %>
    <div class="col text-danger"><%= message %>。</div>
    <% end %>
  <% end %>
</div>

<%= form_with model: @comment, url: comments_path(post_id: @comment.post_id), local:true do |f| %>
  <div><%= f.text_field :comment %></div>
  <div><%= f.submit "投稿する" %></div>
<% end %>